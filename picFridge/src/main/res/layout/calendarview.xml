<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent" 
	android:background="#FFFFFF"
 	android:id="@+id/calendarview_fragment">
	<LinearLayout
		android:id="@+id/selectmonth"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:background="#FFFFFF" android:padding="5dp">
 
            <Button android:id="@+id/btn_calendar_prevmonth"
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/calendar_left"
                />
            <TextView android:text=""
                       android:id="@+id/CalendarMonthTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="22dip"
                        android:gravity="center"
                        android:layout_weight="90" />
 
            <Button android:id="@+id/btn_calendar_nextmonth"
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/calendar_right"
                />
 
    </LinearLayout>
 
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/calendar_scroll">
        <TableLayout
            android:id="@+id/tl_calendar_monthly"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </TableLayout>
    </ScrollView>
 
</LinearLayout>