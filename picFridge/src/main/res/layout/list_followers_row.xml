<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:background="#fff"
  >

  	<GridLayout
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:layout_marginLeft="5dp"
  	    android:layout_marginRight="5dp"
  	    android:padding="6dp"
  	    android:paddingTop="2dp"
        android:background="@drawable/background_with_shadow2"
        android:layout_marginTop="5dp">

  		<LinearLayout
  		    android:layout_width="wrap_content"
  		    android:layout_height="wrap_content"
  		    android:layout_gravity="fill_horizontal"
  		    android:gravity="center_horizontal"
  		    android:orientation="vertical" >

  			<LinearLayout
  			    android:id="@+id/list_company_icon"
  			    android:layout_width="120dp"
  			    android:layout_height="120dp"
  			    android:clickable="false"
  			    android:gravity="top|right"
  			    android:orientation="vertical" >

  				<ImageView
  				    android:id="@+id/list_info"
  				    android:layout_width="20dp"
  				    android:layout_height="20dp"
  				    android:clickable="true"
  				    android:src="@drawable/info" />

  			</LinearLayout>

  		    <LinearLayout
  		        android:layout_width="match_parent"
  		        android:layout_height="wrap_content"
  		        android:paddingTop="5dp" 
				android:orientation="vertical" >
  		        <TextView
  		            android:id="@+id/list_company_name"
  		            android:layout_width="wrap_content"
  		            android:layout_height="wrap_content"
  		            android:padding="2dp"
  		            android:text="연세대학교"
  		            android:textSize="17sp"
                    android:minLines="2" />

  		        <TextView
  		            android:id="@+id/list_follow_num"
  		            android:layout_width="wrap_content"
  		            android:layout_height="wrap_content"
  		            android:layout_gravity="right|center_vertical|center_horizontal|center"
  		            android:layout_marginLeft="10dp"
  		            android:text="학교"
  		            android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_marginBottom="5dp"
                    android:textSize="13dp" />

  		    </LinearLayout>

  		    <LinearLayout
  		        android:layout_width="match_parent"
  		        android:layout_height="wrap_content" >

  		        <ToggleButton
  		            android:id="@+id/list_cal_follow"
  		            android:layout_width="50dp"
  		            android:layout_height="21dp"
  		            android:layout_weight="50"
  		            android:background="@drawable/btn_cal_follow_callist"
  		            android:minHeight="15dp"
  		            android:minWidth="30dp"
  		            android:padding="3dp"
  		            android:textOff=" "
  		            android:textOn=" " />

  		        <ToggleButton
  		            android:id="@+id/list_wall_follow"
  		            android:layout_width="50dp"
  		            android:layout_height="21dp"
  		            android:layout_weight="50"
  		            android:background="@drawable/btn_wall_follow_callist"
  		            android:minHeight="15dp"
  		            android:minWidth="30dp"
  		            android:padding="3dp"
  		            android:textOff=" "
  		            android:textOn=" " />

  		    </LinearLayout>

  		</LinearLayout>

  	</GridLayout>
  
</LinearLayout>
